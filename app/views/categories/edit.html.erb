<h1 class="text-center mt-2" >Edit Category</h1>

<%= render 'shared/errors', object: @category %>


<div class="container col-3 mb-3">
	<%= form_with(model: @category, class: "border bg-light p-5 shadow-sm p-3 mt-5 bg-white rounded", local: true) do |f| %>
	  <div class="mb-1">
			<%= f.label :name, class: 'form-label' %>
			<%= f.text_field :name, class: 'form-control', placeholder: 'Choose category name' %>
	  </div>
          <%= f.submit 'Update', class: 'btn btn-primary mt-1' %>

  <% end %>
</div>

<div class="container text-center">
	<%= link_to 'back', '/', class: 'btn btn-secondary' %>
</div>