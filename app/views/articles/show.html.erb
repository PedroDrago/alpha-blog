<h1 class="text-center" > <%= @article.title %> </h1>
    <div class="container mb-4">
      <div class="card text-center">
        <div class="card-body">
          <p class="card-text"> <%= @article.description %> </p>

            <% if logged_in? && current_user == @article.user %>
              <%= link_to 'Edit', edit_article_path, class: "btn btn-primary" %>
            <% end %>
            <% if logged_in? && (current_user == @article.user || current_user.admin?)%>
              <%= link_to 'delete', article_path(@article), data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure you want to delete this article?' }, class: 'btn btn-danger' %>
            <% end %>



        </div>
        <div class="card-footer text-muted">
          created <%=time_ago_in_words(@article.created_at) %> ago, edited <%= time_ago_in_words(@article.updated_at) %> ago by <%= link_to @article.user.username, user_path(@article.user) %> 
        </div>
      </div>
    </div>

<div class="container text-center">
  <%= link_to 'Articles', articles_path, class: 'btn btn-primary' %>
</div>
