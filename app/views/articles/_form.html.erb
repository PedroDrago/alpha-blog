<%= form_with(model: @article, local: true, data: {turbo: false }) do |form| %>
    <p>
        <%= form.label :title %>
        <%= form.text_field :title %>
    <p>

    <p>
        <%= form.label :description %>
        <%= form.text_area :description %>
    </p>

    <p>
        <%= form.submit %>
    </p>


<% end %>