<% @categories.each do |category| %>
<div class="container mb-4 mt-4 col-2">
  <div class="card text-center">

    <div class="card-body">
      <h5><%= link_to category.name, category, class: "card-title h5 badge #{badge_class(category)}"%></h5>
      <p class="card-text text-muted"> <%= category.articles.count %> articles </p>
    </div>
  </div>
</div>
  
<% end %>

