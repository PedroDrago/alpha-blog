<%= render 'shared/errors', object: @user %>


<div class="container col-4 mb-3">
	<%= form_with(model: @user, class: "border bg-light p-5 shadow-sm p-3 mt-5 bg-white rounded", local: true) do |f| %>
	  <div class="mb-1">
			<%= f.label :username, class: 'form-label' %>
			<%= f.text_field :username, class: 'form-control', placeholder: 'Choose your username' %>
	  </div>
		  <div class="mb-1">
			<%= f.label :email, class: 'form-label' %>
			<%= f.email_field :email, class: 'form-control', placeholder: 'Enter your email address' %>
	  </div>
		  <div class="mb-3">
			<%= f.label :password, class: 'form-label' %>
			<%= f.password_field :password, class: 'form-control', placeholder: 'Choose your password'%>
	  </div>
			<%= f.submit(@user.new_record? ? "Sign Up" : "Update", class: 'btn btn-primary') %>
			<br>
			<% if logged_in? && current_user == @user %>
  				<%= link_to 'delete', user_path(current_user), data: { 'turbo-method': :delete, 'turbo-confirm': 'are you sure you want to delete your account?' }, class: 'btn btn-danger mt-2' %>
			<% end %>
	<% end %>

</div>

